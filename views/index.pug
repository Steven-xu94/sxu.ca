extends layout

block navbar
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
        .container-fluid

            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#main-nav')
                    span.sr-only Toggle navigation
                    // hamburger button
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='#top') Home

            #main-nav.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li
                        a(class="btn-blog", href='//blog.sxu.ca') Blog
                    li
                        a(class="btn-resume", href='/files/resume.pdf') Resume
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href='#profile') Profile
                    li
                        a(href='#experiences') Experiences
                    li
                        a(href='#abilities') Abilities
                    li
                        a(href='#interests') Interests
                    li
                        a(href='#contact') Contact

block jumbotron
    section#top.jumbotron.carousel.slide(data-ride='carousel', data-pause='')
        .container
            h1 Steven Xu
            .separator
            p.sub personal website
        .layer

        ol.carousel-indicators
            li.active(data-target='#top', data-slide-to='0')
            li(data-target='#top', data-slide-to='1')
            li(data-target='#top', data-slide-to='2')
            li(data-target='#top', data-slide-to='3')
            li(data-target='#top', data-slide-to='4')
            li(data-target='#top', data-slide-to='5')
        .carousel-inner(role='listbox')
            .item.carousel-item-1.active
            .item.carousel-item-2
            .item.carousel-item-3
            .item.carousel-item-4
            .item.carousel-item-5
            .item.carousel-item-6
        a.left.carousel-control(href='#top', role='button', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left(aria-hidden=true)
            span.sr-only Previous
        a.right.carousel-control(href='#top', role='button', data-slide='next')
            span.glyphicon.glyphicon-chevron-right(aria-hidden=true)
            span.sr-only Next

block profile
    section.background-white
        section#profile.container(data-sr='')
            h2 Profile
            p.sub I'm a passionate developer.
            hr
            .row
                .col-md-4
